{
	"list.source.files.command": "fd",
	"list.source.files.defaultArgs": [
		"--type",
		"f",
		"--exclude",
		"*.png",
		"--exclude",
		"*.java",
		"--exclude",
		"*.jsp",
		"--exclude",
		"*.xml",
		"--exclude",
		"*.groovy"
	],
	"list.previewSplitRight": true,
	"list.source.grep.maxColumns": 300,
	// "javascript.suggestionActions.enabled": false,
	// "typescript.suggestionActions.enabled": false,
	"prettier.onlyUseLocalVersion": true,
	"html.format.wrapLineLength": 0,
	"html.format.indentHandlebars": true,
	// "css.validate": false,
	// "less.validate": false,
	// "scss.validate": false,
	// "wxss.validate": false,
	"session.directory": "~/.vim/tmp/dir_session",
	"session.saveOnVimLeave": false,
	"git.enableGutters": true,
  "git.addedSign.hlGroup": "GitGutterAdd",
  "git.changedSign.hlGroup": "GitGutterChange",
  "git.removedSign.hlGroup": "GitGutterDelete",
  "git.topRemovedSign.hlGroup": "GitGutterDelete",
  "json.schemas": [
    {
      "name": ".vimspector.json",
      "description": "vimspector configuration file",
      "fileMatch": [ ".vimspector.json" ],
      "url": "https://puremourning.github.io/vimspector/schema/vimspector.schema.json"
    },
    {
      "name": ".gadgets.json",
      "description": "gadgets configuration file",
      "fileMatch": [ ".gadgets.json", ".gadgets.d/*.json" ],
      "url": "https://puremourning.github.io/vimspector/schema/gadgets.schema.json"
    }
  ],
  "svelte.enable-ts-plugin": true,
  "diagnostic.enableMessage": "jump",
  "diagnostic.virtualText": true,
  "diagnostic.virtualTextAlign": "right",
  // "diagnostic.virtualTextLevel": "warning",
  "diagnostic.virtualTextLimitInOneLine": 1,
  "diagnostic.virtualTextLines": 1,
  "diagnostic.virtualTextPrefix": "  ï µ ",
  "suggest.virtualText": true
}
