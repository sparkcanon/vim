{
	"list.source.files.command": "fd",
	"list.source.files.defaultArgs": [
		"--type",
		"f",
		"--exclude",
		"*.png",
		"--exclude",
		"*.java",
		"--exclude",
		"*.jsp",
		"--exclude",
		"*.xml",
		"--exclude",
		"*.groovy"
	],
	"list.previewSplitRight": true,
	"list.source.grep.maxColumns": 300,
	"javascript.suggestionActions.enabled": false,
	"typescript.suggestionActions.enabled": false,
	"prettier.eslintIntegration": true,
	"prettier.onlyUseLocalVersion": true,
	"html.format.wrapLineLength": 0,
	"html.format.indentHandlebars": true,
	// "css.validate": false,
	// "less.validate": false,
	// "scss.validate": false,
	// "wxss.validate": false,
	"stylelint.filetypes": [
		"css",
		"wxss",
		"scss",
		"less",
		"postcss",
		"sugarss"
	],
	"stylelintplus.filetypes": [
		"css",
		"less",
		"postcss",
		"scss",
		"sugarss",
		"wxss"
	],
	"session.directory": "~/.vim/tmp/dir_session",
	"session.saveOnVimLeave": false,
	"git.enableGutters": true,
  "git.addedSign.hlGroup": "GitGutterAdd",
  "git.changedSign.hlGroup": "GitGutterChange",
  "git.removedSign.hlGroup": "GitGutterDelete",
  "git.topRemovedSign.hlGroup": "GitGutterDelete"
}
